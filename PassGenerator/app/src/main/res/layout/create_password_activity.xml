<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOVA SENHA"
        android:textSize="24sp"
        android:layout_margin="16dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/description_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descrição:"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_below="@id/title_textview" />

    <EditText
        android:id="@+id/description_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_below="@id/description_label" />

    <TextView
        android:id="@+id/length_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tamanho:"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_below="@id/description_edittext" />

    <SeekBar
        android:id="@+id/length_seekbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_below="@id/length_label"
        android:max="20"
        android:progress="0"/>


    <CheckBox
        android:id="@+id/capital_letters_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Letras Maiúsculas"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_below="@id/length_seekbar" />

    <CheckBox
        android:id="@+id/numbers_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Números"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_below="@id/capital_letters_checkbox" />

    <CheckBox
        android:id="@+id/special_characters_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Caracteres Especiais"
        android:textSize="18sp"
        android:layout_margin="16dp"
        android:layout_below="@id/numbers_checkbox" />

    <Button
        android:id="@+id/generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gerar"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_margin="16dp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp" />
</RelativeLayout>
